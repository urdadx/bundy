{
  "name": "wordsearch",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "check-types": "pnpm -r check-types",
    "dev:native": "pnpm --filter native dev",
    "dev:web": "pnpm --filter web dev",
    "dev:server": "pnpm --filter server dev",
    "dev:ws": "pnpm --filter server dev:ws",
    "db:push": "pnpm --filter @wordsearch/db db:push",
    "db:studio": "pnpm --filter @wordsearch/db db:studio",
    "db:generate": "pnpm --filter @wordsearch/db db:generate",
    "db:migrate": "pnpm --filter @wordsearch/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.10.0"
}
