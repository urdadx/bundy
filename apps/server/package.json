{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "build:ws": "bun build --target=bun --outdir=./dist-ws ./src/ws-server.ts",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "dev:ws": "bun run --hot src/ws-server.ts",
    "start": "bun run dist/index.js",
    "start:ws": "bun run dist-ws/ws-server.js"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "catalog:",
    "@wordsearch/api": "workspace:*",
    "@wordsearch/auth": "workspace:*",
    "@wordsearch/db": "workspace:*",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@wordsearch/config": "workspace:*",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
